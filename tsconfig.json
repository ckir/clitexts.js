{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "lib": ["ESNext"],
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,    
    "paths": {
      "@/*": ["src/*"],
      "@t/*": ["tests/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "src/lib/screen-abstract.ts", "src/lib/theme-manager.cjs"]
}